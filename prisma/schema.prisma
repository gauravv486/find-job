generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Job {
  id              String  @id @default(auto()) @map("_id") @db.ObjectId
  jobId           String?  @unique
  employerName    String?
  employerLogo    String?
  employerWebsite String?
  jobTitle        String?
  jobApplyLink    String?
  jobDescription  String?
  jobCountry      String?
  minSalary       Int?
  jobLocation     String?
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String @unique
  password String?
}
